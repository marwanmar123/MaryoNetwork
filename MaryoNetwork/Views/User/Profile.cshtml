                            {
                                <img style="width:40px;height:40px; object-fit:cover; border-radius:30px" src="data:image/*;base64,@Convert.ToBase64String(p.User.ProfilePicture)">
                            }
                            else
                            {
                                <p class="text-center" style="width:40px;height:40px; background-color:forestgreen; font-weight:bold; object-fit:cover; border-radius:30px">@p.User.FullName.Substring(0, 2).ToUpper()</p>
                            }
                            @Html.DisplayFor(modelItem => u.FullName)
                        </a>
                    </td>
                    <td>@p.Category.Name</td>
                    <td>@p.Content</td>
                    <td>@p.Title</td>
                    <td>
                        @foreach (var f in p.Images)
                        {
                            <img style="width:40px;height:40px; object-fit:cover; border-radius:30px" src="data:image/*;base64,@Convert.ToBase64String(f.Data)">
                        }
                    </td>
                    <td>
