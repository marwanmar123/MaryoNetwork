
@model List<MaryoNetwork.ViewModels.ProfileViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_Sidebar" />
<h1>User Roles</h1>
<div class="d-flex">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>FullName</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(" , ", user.Roles.ToList())</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Role" asp-action="Manage" asp-route-userId="@user.UserId">Manage Roles</a>
                    </td>
                    <td>
                        <a class="btn btn-info" asp-controller="User" asp-action="Details" asp-route-Id="@user.UserId">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-Id="@user.UserId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <div class="row">
            <div class="col-6">
                <h2 class="text-black-50">Roles</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Create" class="btn btn-info">New Role</a>
            </div>
        </div>
        <br />
        <div>
            <table class="table table-dark table-striped text-center">
                <tr>
                    <th>
                        Name
                    </th>

                    <th></th>
                </tr>
                @foreach (var item in ViewBag.Roles)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td style="width: 150px">
                            <div class="btn-group">
                                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">
                                    Edit
                                </a>
                                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>